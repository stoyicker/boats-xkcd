<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            android:scrollbars="vertical">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
      android:id="@+id/icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@string/app_name"
      android:gravity="center"
      android:paddingBottom="@dimen/dialog_view_padding_vertical"
      android:paddingLeft="@dimen/dialog_view_padding_horizontal"
      android:paddingRight="@dimen/dialog_view_padding_horizontal"
      android:paddingTop="@dimen/dialog_view_padding_vertical"
      android:scaleType="centerInside"
      android:src="@drawable/ic_launcher"/>

    <TextView
      android:id="@+id/body"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:paddingBottom="@dimen/dialog_view_padding_vertical"
      android:paddingLeft="@dimen/dialog_view_padding_horizontal"
      android:paddingRight="@dimen/dialog_view_padding_horizontal"
      android:paddingTop="@dimen/dialog_view_padding_vertical"
      android:textIsSelectable="false"/>

    <TextView
      android:id="@+id/version"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:paddingBottom="@dimen/dialog_view_padding_vertical"
      android:paddingLeft="@dimen/dialog_view_padding_horizontal"
      android:paddingRight="@dimen/dialog_view_padding_horizontal"
      android:paddingTop="@dimen/dialog_view_padding_vertical"
      android:textIsSelectable="false"/>
  </LinearLayout>
</ScrollView>