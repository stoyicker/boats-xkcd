<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppMaterialDark" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/material_dark_primary</item>
    <item name="colorAccent">@color/material_dark_accent</item>
    <item name="color">@color/material_dark_primary_light</item>
    <item name="colorControlNormal">@color/material_dark_primary_text</item>
    <item name="android:textColorPrimary">@color/material_dark_primary_text</item>
    <item name="android:textColorSecondary">@color/material_dark_secondary_text</item>
    <item name="divider">@color/material_dark_divider</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowActionModeOverlay">true</item>
    <item name="android:actionModeBackground">?attr/colorPrimary</item>
    <item name="android:windowBackground">@null</item>
    <item name="android:itemBackground">@color/material_dark_accent</item>
  </style>

  <style name="SettingsMaterialDark" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorAccent">@color/material_dark_accent</item>
    <item name="background">@color/material_dark_settings_window_background</item>
    <item name="android:textColorPrimary">@color/material_dark_tertiary_text</item>
    <item name="android:textColorSecondary">@color/material_dark_secondary_text</item>
    <item name="actionBarTheme">@style/SettingsActionBarThemeMaterialDark</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    <item name="actionBarStyle">@style/BaseSettingsActionBarStyle</item>
  </style>

  <style name="SettingsActionBarThemeMaterialDark" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@color/material_dark_primary_text</item>
  </style>
</resources>
