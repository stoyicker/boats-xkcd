<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppNegative" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/negative_primary</item>
    <item name="colorAccent">@color/negative_accent</item>
    <item name="color">@color/negative_primary_light</item>
    <item name="android:textColorPrimary">@color/negative_primary_text</item>
    <item name="android:textColorSecondary">@color/negative_secondary_text</item>
    <item name="divider">@color/negative_divider</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowActionModeOverlay">true</item>
    <item name="android:actionModeBackground">?attr/colorPrimary</item>
    <item name="android:windowBackground">@null</item>
    <item name="actionBarBackground">@color/negative_actionbar_background</item>
  </style>

  <style name="SettingsNegative" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorAccent">@color/negative_accent</item>
    <item name="background">@color/negative_settings_window_background</item>
    <item name="android:textColorPrimary">@color/negative_tertiary_text</item>
    <item name="android:textColorSecondary">@color/negative_secondary_text</item>
    <item name="actionBarTheme">@style/SettingsActionBarThemeNegative</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    <item name="actionBarStyle">@style/BaseSettingsActionBarStyle</item>
  </style>

  <style name="SettingsActionBarThemeNegative" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@color/negative_primary_text</item>
  </style>
</resources>