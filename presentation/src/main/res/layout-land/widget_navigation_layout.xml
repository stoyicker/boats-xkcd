<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <View
      android:id="@+id/wall_zero"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab_index_zero"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/wall_zero"
      android:layout_centerHorizontal="true"
      android:layout_margin="@dimen/standard_margin"
      android:scaleType="center"
      android:src="@drawable/ic_arrow_left"
      app:borderWidth="0dp"
      app:fabSize="normal"/>
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <View
      android:id="@+id/wall_one"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab_index_one"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/wall_one"
      android:layout_centerHorizontal="true"
      android:layout_margin="@dimen/standard_margin"
      android:scaleType="center"
      android:src="@drawable/ic_dice"
      app:borderWidth="0dp"
      app:fabSize="normal"/>
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <View
      android:id="@+id/wall_two"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab_index_two"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/wall_two"
      android:layout_centerHorizontal="true"
      android:layout_margin="@dimen/standard_margin"
      android:scaleType="center"
      android:src="@drawable/ic_share"
      app:borderWidth="0dp"
      app:fabSize="normal"/>
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <View
      android:id="@+id/wall_three"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab_index_three"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/wall_three"
      android:layout_centerHorizontal="true"
      android:layout_margin="@dimen/standard_margin"
      android:scaleType="center"
      android:src="@drawable/ic_arrow_right"
      app:borderWidth="0dp"
      app:fabSize="normal"/>
  </RelativeLayout>
</merge>